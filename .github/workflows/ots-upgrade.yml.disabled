name: ots-upgrade
on:
  schedule:
    - cron: "0 */6 * * *"
  workflow_dispatch:

permissions:
  contents: write

jobs:
  upgrade:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with:
          python-version: "3.x"
      - run: pip install --upgrade opentimestamps-client

      - name: Upgrade any pending proofs
        id: up
        shell: bash
        run: |
          shopt -s nullglob
          UPDATED=0
          for f in proofs/*.ots; do
            echo "Upgrading $f"
            if ots upgrade "$f"; then
              UPDATED=1
              ots info "$f" > "${f%.ots}.info.txt" || true
            fi
          done
          echo "updated=$UPDATED" >> "$GITHUB_OUTPUT"

      - name: Commit upgraded proofs
        if: steps.up.outputs.updated == '1'
        uses: stefanzweifel/git-auto-commit-action@v5
        with:
          commit_message: "chore(ots): upgrade proofs with finalized Bitcoin anchors [skip ci]"
          file_pattern: |
            proofs/*.ots
            proofs/*.info.txt
